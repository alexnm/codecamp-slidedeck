function add( a, b ) {
    return a + b;
}

add( 1, 2 ); // 3

function add( a, b, c ) {
    return a + b + c;
}

add( 1, 2, 3 ); // 6

function add( a, b, c ) {
    var args = [ ].slice.call( arguments );
    return args.reduce( function( a, b ) {
        return a + b;
    } );
}

add( 1, 2, 3, 4, 5 ); // 15 

/* ES 2015 */

const add = ( ...args ) => args.reduce( ( a, b ) => a + b );

add( 1, 2, 3, 4, 5 ); // 15


const addTo = ( initialValue, ...args ) => initialValue + add( ...args );

addTo( 10, 1, 2, 3, 4, 5 ); // 25


const array = [ 1, 2, 3, 4, 5 ];

add( ...array );


const [ first, ...rest ] = [ 1, 2, 3, 4, 5 ];
// first - 1
// rest - [ 2, 3, 4, 5 ]


